---
import { Icon } from "astro-icon";
import Container from "../components/Container.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-700 antialiased">
    <Container>
      <header class="py-12 flex justify-between items-center">
        <a href="/" class="font-bold text-gray-800">wh1zk1d's blog</a>
        <nav class="flex items-center gap-3">
          <a
            href="https://github.com/wh1zk1d"
            target="_blank"
            title="GitHub"
            class="bg-gray-100 hover:bg-gray-200 rounded-lg p-3 inline-block"
          >
            <span class="sr-only">wh1zk1d on GitHub</span>
            <Icon pack="lucide" name="github" class="h-4 w-4" />
          </a>
          <a
            href="https://twitter.com/wh1zk1ddo"
            target="_blank"
            title="Twitter"
            class="bg-gray-100 hover:bg-gray-200 rounded-lg p-3 inline-block"
          >
            <span class="sr-only">wh1zk1d on Twitter</span>
            <Icon pack="lucide" name="twitter" class="h-4 w-4" />
          </a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer class="py-10">
        &copy; {new Date().getFullYear()}
      </footer>
    </Container>
  </body>
</html>

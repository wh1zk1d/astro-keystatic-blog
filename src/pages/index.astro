---
import Layout from "../layouts/Layout.astro";

import keystaticConfig from "../../keystatic.config";
import { createReader } from "@keystatic/core/reader";

const reader = createReader("", keystaticConfig);
const homepageData = await reader.singletons.homepage.read();
---

<Layout title="wh1zk1d">
  <h1 class="font-bold text-6xl text-gray-800 mb-8">
    {homepageData?.headline}
  </h1>
  <p class="text-2xl max-w-prose leading-relaxed">{homepageData?.subline}</p>
  {homepageData?.content}
</Layout>
